@inject HttpClient _client

<EditForm Model="@passenger" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <fieldset disabled="@Disabled">
        <div class="form-group">
            <label>Passenger Gender: </label>
        </div>
        <InputSelect class="form-control" @bind-Value="passenger.PassengerGender">
            <option value="-- Select Gender --">-- Select Gender --</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </InputSelect>
        <ValidationMessage For="@(() => passenger.PassengerGender)" />

        <div class="form-group">
            <label>First Name: </label>
            <div>
                <InputText @bind-Value="@passenger.PassengerFirstName" class="form-control" />
                <ValidationMessage For="@(() => passenger.PassengerFirstName)" />
            </div>
        </div>

        <div class="form-group">
            <label>Last Name: </label>
            <div>
                <InputText @bind-Value="@passenger.PassengerLastName" class="form-control" />
                <ValidationMessage For="@(() => passenger.PassengerLastName)" />
            </div>
        </div>

        <div class="form-group">
            <label>Passenger Phone Number: </label>
        </div>
        <InputText @bind-Value="@passenger.PassengerPhone" class="form-control" />
        <ValidationMessage For="@(()=> passenger.PassengerPhone)" />

        <div class="form-group">
            <label>Passenger Email: </label>
        </div>
        <InputText @bind-Value="@passenger.PassengerEmail" class="form-control" />
        <ValidationMessage For="@(()=> passenger.PassengerEmail)" />

        <div class="form-group">
            <label>Passenger Rating: </label>
        </div>
        <InputNumber @bind-Value="@passenger.PassengerRating" class="form-control" />

        <div class="form-group">
            <label>Passenger Address: </label>
        </div>
        <InputText @bind-Value="@passenger.PassengerAddress" class="form-control" />
    </fieldset>
    @if (!Disabled)
    {
    <button type="submit" class="btn btn-success btn-block">
        @ButtonText
    </button>
    }
    <BackToList Target="passengers" />

</EditForm>
@code {
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Passenger passenger { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

}
