@page "/"

@using CabifyTransportBooking.Client.Shared
@inject IJSRuntime JsRuntime

<div class="header">
    <div class="header-left">
        <h1>Cabify</h1>
    </div>
    <div class="header-right">
        <a href="">About Us</a>
        <a href="">Contact Us</a>
    </div>
</div>

<div class="content">
    <div class="content-left">
        <h1>A <b style="color:yellow;">ride</b><br> for everyone.</h1>

        <a href="/booking"><button class="booking-btn">Book Now</button></a>
    </div>
    <div class="content-right">
        <img style="border-radius:50px;" src="./images/istockphoto-1217653245-612x612.jpg" width="500">
    </div>
</div>

<div class="content-2">
    <div class="content-left-2">
        <img style="border-radius:50px;border: 2px solid black;" src="./images/signupimage.jpg" width="350">
    </div>
    <div class="content-right-2">
        <h1 style="font-weight:bolder;">A better way to travel</h1>
        <p class="signup-subtext">
            Our service is just a<br> few clicks away.
        </p>
        <a href="authentication/profile"><button class="sign-up-btn">Register Now</button></a>
    </div>
</div>
<h1 class="category-title">Ride Categories</h1>
<div class="category-div">
    <div class="category">
        <button @onclick="showCabifyStandard"><img src="./images/categoryimage.png"></button>
        <p>Cabify Standard</p>
    </div>
    <div class="category">
        <button @onclick="showCabifyPremium"><img src="./images/categoryimage.png"></button>
        <p>Cabify Premium</p>
    </div>
    <div class="category">
        <button @onclick="showCabifyGreen"><img src="./images/categoryimage.png"></button>
        <p>Cabify Green</p>
    </div>
    <div class="category">
        <button @onclick="showCabifyWomenFriendlyRide"><img src="./images/categoryimage.png"></button>
        <p>Cabify Women Friendly Ride</p>
    </div>
</div>

<div class="footer">
    <div class="footer-info">&#169; Cabify 2022 </div>
</div>

@code {
    private void showCabifyStandard()
    {
        JsRuntime.InvokeVoidAsync("alert", "Capacity: 5, Pricing: $12.00");
    }

    private void showCabifyPremium()
    {
        JsRuntime.InvokeVoidAsync("alert", "Capacity: 5, Pricing: $15.00"); 
    }

    private void showCabifyGreen()
    {
        JsRuntime.InvokeVoidAsync("alert", "Capacity: 5, Pricing: $10.00"); 
    }

    private void showCabifyWomenFriendlyRide()
    {
        JsRuntime.InvokeVoidAsync("alert", "Capacity: 5, Pricing: $12.00, Gender: Woman only"); 
    }
}